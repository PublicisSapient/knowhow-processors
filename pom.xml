      <groupId>com.publicissapient.kpidashboard</groupId>
      <artifactId>common</artifactId>
      <version>13.4.0-SNAPSHOT</version>
      <scope>compile</scope>
      <exclusions>
        <exclusion>
          <groupId>ch.qos.logback</groupId>
